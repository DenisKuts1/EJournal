<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/schedule_item_layout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/schedule_subject_item_shape">
    <com.chnu.ejournal.CorneredImageView
        android:adjustViewBounds="true"
        android:id="@+id/schedule_subject_item_image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:id="@+id/schedule_subject_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/schedule_subject_name"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
        <TextView
            android:paddingTop="8dp"
            android:textColor="#ffffff"
            android:id="@+id/schedule_subject_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>
    <TextView
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="true"
        android:id="@+id/schedule_subject_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textSize="20sp"
        android:textStyle="bold"/>
</RelativeLayout>