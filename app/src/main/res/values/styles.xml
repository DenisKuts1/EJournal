<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/launch_status_bar</item>
    </style>

    <style name="ActivityTheme.Primary.Base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="primaryTextColor">@color/colorTextPrimary</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="secondaryTextColor">@color/colorTextSecondary</item>
        <item name="iconColor">@color/iconColor</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
    </style>

    <style name="ActivityTheme.Primary.Base.ForNavView" parent="ActivityTheme.Primary.Base">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="ActivityThemeLight" parent="ActivityTheme.Primary.Base">
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="LanguageSettingsDialog" parent="Theme.AppCompat.Light.Dialog" />
    <style name="ExpandableTitleSubject">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CollapsedTitleSubject">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
